// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  id    Int    @id @default(autoincrement())
  name  String
  price Int

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@map("items")
}

model Client {
  id          String @id
  name        String
  phoneNumber String @unique
  city        String
  street      String
  houseNumber String
  opts        String

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("clients")
}

model User {
  id       String @id
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  RefreshToken RefreshToken?
  Client       Client[]
  Item         Item[]

  @@map("users")
}

model RefreshToken {
  id        String @id
  expiresIn Int

  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("refresh_token")
}
